<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.blackpanther.bingo">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Bingo"
            android:label="@string/title_activity_intro_page" />
        <activity
            android:name=".InputPage"
            android:label="@string/title_activity_input_page" />
        <activity
            android:name=".Gameplay"
            android:label="@string/title_activity_gameplay" />
        <activity
            android:name=".Victor"
            android:label="@string/title_activity_victor" />
        <activity android:name=".GameChose"></activity>
    </application>

</manifest>